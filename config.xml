<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yada.sg.ssp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BOC SG iMerchant</name>
    <description>
        BOC SG iMerchant is a handy mobile app tailored for merchants in Singapore. It is an app to accept QR based transactions like UnionPay QR, WeChat Pay and Alipay. Functions includes generating QR for customer to scan and make payment, transaction history search and more. Write in to us at msu.sg@bankofchina.com for enquiries.
    </description>
    <author email="msu.sg@bankofchina.com" href="http://cordova.io">
        BOC SG Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <resource-file src="google-services.json" target="app/google-services.json" />
        <preference name="android-minSdkVersion" value="19" />
        <icon density="ldpi" src="res/icon/android/logoAndroidIcon_36pt.png" />
        <icon density="mdpi" src="res/icon/android/logoAndroidIcon_36pt@1.3x.png" />
        <icon density="hdpi" src="res/icon/android/logoAndroidIcon_36pt@2x.png" />
        <icon density="xhdpi" src="res/icon/android/logoAndroidIcon_36pt@2.7x.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/icon/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="res/icon/ios/icon-60.png" width="60" />
        <icon height="120" src="res/icon/ios/icon-60@2x.png" width="120" />
        <icon height="40" src="res/icon/ios/icon-40.png" width="40" />
        <icon height="80" src="res/icon/ios/icon-40@2x.png" width="80" />
        <icon height="29" src="res/icon/ios/icon-small.png" width="29" />
        <icon height="58" src="res/icon/ios/icon-small@2x.png" width="58" />
    </platform>
    <splash src="res/screen/Default@2x~universal~anyany.png" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="phonegap-plugin-push" spec="^2.2.3" />
    <plugin name="cordova-plugin-sqlite-2" spec="^1.0.5" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="^7.1.1" />
    <engine name="ios" spec="^5.0.1" />
</widget>
